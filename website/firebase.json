{
  "functions": [
    {
      "source": "functions",
      "codebase": "figpowers",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "database": {
    "rules": "database.rules.json"
  },
  "emulators": {
    "functions": {
      "host": "localhost",
      "port": "6000"
    },
    "database": {
      "host": "localhost",
      "port": "7000"
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api{,/**}",
        "function": "api"
      },
      {
        "source": "/privacy",
        "destination": "/legal/privacy-policy.html"
      },
      {
        "source": "/terms",
        "destination": "/legal/terms-and-conditions.html"
      },
      {
        "source": "/auth",
        "destination": "/"
      }
    ]
  }
}