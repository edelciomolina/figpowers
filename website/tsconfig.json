{
  "compilerOptions": {
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "functions/dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["functions/src/**/*.ts"],
  "exclude": ["node_modules"]
}
