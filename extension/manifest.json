{
    "name": "FigPowers",
    "manifest_version": 3,
    "version": "1.0.0",
    "default_locale": "en",
    "description": "__MSG_appDesc__",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "declarativeContent",
        "notifications"
    ],
    "action": {
        "default_icon": {
            "16": "assets/16x16.png",
            "24": "assets/24x24.png",
            "32": "assets/32x32.png",
            "48": "assets/48x48.png",
            "96": "assets/96x96.png",
            "128": "assets/128x128.png"
        },
        "default_title": "FigPowers",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://figma.com/",
        "https://www.figma.com/"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.figma.com/*",
                "https://figma.com/*"
            ],
            "js": [
                "modules/home.js",
                "modules/translation.js",
                "content.js"
            ],
            "css": [
                "modules/home.css"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+P",
                "windows": "Alt+P",
                "chromeos": "Alt+P",
                "linux": "Alt+P",
                "mac": "Alt+P"
            },
            "description": "__MSG_shortcutOpenExtension__"
        }
    }
}
